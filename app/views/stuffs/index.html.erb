<div class="container">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @stuffs.each do |stuff| %>
      <%= link_to stuff do %>
        <div class="col">
          <div class="cards">
            <%= cl_image_tag(stuff.photos.first.key, height: 250, width: 250, crop: :fill)%>
            <h5 class="card-text"><%=stuff.name%></h5>
          </div>
        </div>
      <%end%>
    <% end %>
  </div>
</div>
