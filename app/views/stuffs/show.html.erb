<div class="container">
  <div class="row">

    <div class="col-md-7">

      <div class="container-fotos">
        <% @stuff.photos.each_with_index do |photo, index| %>
          <a data-bs-toggle="modal" data-bs-target="#photo-<%=index%>"><%= cl_image_tag photo.key, height: 200, width: 200, crop: :fill, inner_html: { class:"images-carousel" } %></a>
              <!-- Modal -->
          <div class="modal fade" id="photo-<%=index%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <%= cl_image_tag photo.key, height: 400, width: 400, crop: :fill, inner_html: { class:"images-carousel" } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-md-5">
      <h1 class="title"><%=@stuff.name%></h1>
      <span class="fw-bold mr-10 va-middle hide-mobile">Descrição:</span>
      <p><%=@stuff.description%></p>
      <span class="fw-bold mr-10 va-middle hide-mobile">Share:</span>
      <a href="#x" class="btn btn-xs btn-facebook btn-circle btn-icon mr-5 mb-0"><i class="fab fa-facebook-f"></i></a>
      <a href="#x" class="btn btn-xs btn-instagram btn-circle btn-icon mr-5 mb-0"><i class="fab fa-instagram"></i></a>
      <a href="#x" class="btn btn-xs btn-whatsapp btn-circle btn-icon mr-5 mb-0"><i class="fab fa-whatsapp"></i></a>

      <div class="botoes">
        <%= link_to 'edit', edit_stuff_path%>
        <%= link_to 'delete', stuff_path(@stuff), method: 'DELETE', data: { confirm: "are you sure?" } %>
      </div>
    </div>
  </div>
</div>
