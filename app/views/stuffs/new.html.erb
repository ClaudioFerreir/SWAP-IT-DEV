<div class="d-flex justify-content-center align-items-center">
  <div class="form-swapit">
    <H1>create stuff</H1>

    <%= simple_form_for(@stuff) do |f| %>

      <div class="form-inputs">
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "description" }%>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "save new stuff", class: "button-04"%>
      </div>
    <% end %>

    <%= link_to 'go home', root_path%>
    <br>
    <%= link_to 'edit user', edit_user_registration_path%>
    <br>
    <%= link_to "back", :back %>
  </div>
</div>
