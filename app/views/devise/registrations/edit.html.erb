<div class="container-formularios-simples">
  <div class="form-swapit">
    <h1 class="title">edit user</h1>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :photo, :label => "photo",as: :file %>
        <%= f.input :name,:label => "name",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "name" }%>
        <%= f.input :address,:label => "address",
              input_html: { data: { geocoder_target: "address" } },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= f.input :range,:label => "range (km)", min: '1',
                    required: true,
                    autofocus: true
                    %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,:label => "password",
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new password" } %>
        <%= f.input :password_confirmation,:label => "password_confirmation",
                    required: false,
                    input_html: { autocomplete: "new password" } %>
        <%= f.input :current_password,:label => "current_password",
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "save your changes", class: "button-04"%>
      </div>
    <% end %>

    <h3>cancel my account</h3>

    <p>unhappy? <%= link_to "cancel my account", registration_path(resource_name), data: { confirm: "are you sure?" }, method: :delete %></p>

    <%= link_to "back", :back %>
    <br>
    <%= link_to "add new stuff", new_stuff_path %>
  </div>
</div>
