<div class="container-formularios-simples">
  <div class="form-swapit">
    <h2 class="title">sign in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,:label => "email",
                    placeholder: 'email@email.com',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>

        <%= f.input :password,:label => "password",
                    required: false,
                    placeholder: 'min. of 6 characters',
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, :label => "remeber me", class: "button-detail", as: :boolean if devise_mapping.rememberable? %>
        <%= link_to "forgot password?", new_password_path(resource_name), class: "button-detail" %><br/><br/>

        <div class="form-actions">
          <%= f.button :submit, "sign in", class: "button-04" %>
        </div>
        <%= link_to "do you mean to sign up?", new_registration_path(resource_name), data: { turbolinks: false },  class: "button-detail"%>
      </div>
    <% end %>

  </div>
</div>
